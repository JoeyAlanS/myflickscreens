<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.topics.DiscussionDetailActivity">

    <!-- Botão de Voltar -->
    <ImageButton
        android:id="@+id/discussion_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_back_30"
        android:contentDescription="Botão Voltar"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:onClick="onBackPressed" />

    <!-- Título da Discussão -->
    <TextView
        android:id="@+id/discussion_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título da Discussão"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/discussion_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Conteúdo da Discussão -->
    <TextView
        android:id="@+id/discussion_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Texto da discussão."
        android:textSize="16sp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/discussion_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Participantes -->
    <TextView
        android:id="@+id/participants_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participantes:"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/discussion_text"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/participants_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/participants_label"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Caixa de Entrada para Resposta -->
    <LinearLayout
        android:id="@+id/reply_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/reply_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escreva sua resposta"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/send_reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
