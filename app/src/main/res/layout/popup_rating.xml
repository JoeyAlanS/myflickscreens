<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Slidebar para a Nota -->
    <RatingBar
        android:id="@+id/rating_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stepSize="0.5" />

    <!-- EditText para a review -->
    <EditText
        android:id="@+id/review_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Escreva sua review aqui..."
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        app:layout_constraintTop_toBottomOf="@id/rating_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão "Adicionar Review" -->
    <Button
        android:id="@+id/add_review_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar Review"
        app:layout_constraintTop_toBottomOf="@id/review_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão "Últimos assistidos" -->
    <Button
        android:id="@+id/last_watch_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Últimos assistidos"
        app:layout_constraintTop_toBottomOf="@id/add_review_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão "Adicionar aos Favoritos" -->
    <Button
        android:id="@+id/favorite_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar aos favoritos"
        app:layout_constraintTop_toBottomOf="@id/last_watch_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão "Compartilhar" -->
    <Button
        android:id="@+id/share_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Compartilhar"
        app:layout_constraintTop_toBottomOf="@id/favorite_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
